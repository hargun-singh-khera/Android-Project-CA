<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity7">

    <TextView
        android:id="@+id/salaryDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salary Display"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/grossSalary"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Gross Salary:"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salaryDisplay" />

    <TextView
        android:id="@+id/grossSalaryDisplay"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="60dp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toEndOf="@+id/grossSalary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salaryDisplay" />

    <TextView
        android:id="@+id/providentFund"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Provident Fund:"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grossSalary"
         />

    <TextView
        android:id="@+id/providentFundDisplay"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toEndOf="@+id/grossSalary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grossSalaryDisplay" />

    <TextView
        android:id="@+id/incomeTax"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Income Tax:"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/providentFund"
        />

    <TextView
        android:id="@+id/incomeTaxDisplay"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toEndOf="@+id/grossSalary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/providentFundDisplay" />

    <TextView
        android:id="@+id/netSalary"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Net Salary:"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/incomeTax"
        />

    <TextView
        android:id="@+id/netSalaryDisplay"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toEndOf="@+id/grossSalary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/incomeTaxDisplay" />



</androidx.constraintlayout.widget.ConstraintLayout>